{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|css|js|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(html|json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "functions/**",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
